pipeline {
    agent any  // This runs the pipeline on any available Jenkins agent

    environment {
        // Define any environment variables if necessary
        HTML_DIR = 'reports'  // Directory where HTML reports will be stored
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the Git repository containing your project (or HTML source)
                git url: 'https://github.com/your-repository/your-html-project.git'
            }
        }

        stage('Generate HTML') {
            steps {
                script {
                    // Example shell script to create an HTML file (you can replace this with your build logic)
                    sh '''
                    echo "<html>
                    <head><title>Jenkins Report</title></head>
                    <body><h1>Build Report</h1><p>This is a simple HTML file generated by Jenkins.</p></body>
                    </html>" > ${HTML_DIR}/report.html
                    '''
                }
            }
        }
